include "/usr/share/nano/*.nanorc"

set autoindent
set const
set cut
set morespace
set multibuffer
set nohelp
set nonewlines
set nowrap
set preserve
set rebindkeypad
set smarthome
set smooth
set suspend
set tabsize 4

bind ^A mark		main
bind ^C	copytext	main
bind ^F whereis		all
bind ^G gotoline	main
bind ^N insert		main
bind ^W cancel		all
bind ^S writeout	main
bind ^R replace		all
bind ^W exit		main
bind ^V uncut		main
bind ^X cut			main
bind ^Z undo		main
bind ^Y redo		main
bind ^] findbracket	main

bind F1 nohelp		main
bind F2 help		main
bind F3 searchagain	main
bind F5 refresh		all
bind F12 suspend	all
